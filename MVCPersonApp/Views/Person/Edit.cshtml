@model MVCPersonApp.Models.PersonModel

@{
    ViewBag.Title = "Person Details - Edit Form";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <table class="table table-striped" width="100%">
        <tr>
            <td width="30%">
                @Html.LabelFor(m => m.Id, new { style = "width:160px" })
            </td>
            <td>
                @Html.EditorFor(m => m.Id)&nbsp;@Html.ValidationMessageFor(m => m.Id)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.FirstName, new { style = "width:160px" })
            </td>
            <td>@Html.EditorFor(m => m.FirstName)&nbsp;@Html.ValidationMessageFor(m => m.FirstName)</td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.LastName, new { style = "width:160px" })
            </td>
            <td>@Html.EditorFor(m => m.LastName)&nbsp;@Html.ValidationMessageFor(m => m.LastName)</td>
        </tr>
        <tr>
            <td colspan="2">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    &nbsp;<input type="submit" value="Save" class="btn btn-default" />
                </div>
            </td>
        </tr>
    </table>
    <hr />

</div>
}

<div>
    @Html.ActionLink("Back to Details", "Details","Person")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
