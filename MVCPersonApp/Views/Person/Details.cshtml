@model MVCPersonApp.Models.PersonModel

@{
    ViewBag.Title = "Person Details - View Form";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <table class="table table-striped" width="100%">
        <tr>
            <td width="30%">
                @Html.LabelFor(m => m.Id)
            </td>
            <td>@Html.Label(Model.Id.ToString())</td>
        </tr>
        <tr>
            <td width="30%">
                @Html.LabelFor(m => m.FirstName)
            </td>
            <td>@Html.Label(Model.FirstName)</td>
        </tr>
        <tr>
            <td width="30%">
                @Html.LabelFor(m => m.LastName)
            </td>
            <td>@Html.Label(Model.LastName)</td>
        </tr>
        <tr>
            <td colspan="2">
                <div class="form-group">
                    &nbsp;@Html.ActionLink("Edit", "Edit", new { PersonId = Model.Id }, htmlAttributes: new { @class = "btn btn-default" })
                </div>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            </td>
        </tr>
    </table>

      
    
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index","Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
